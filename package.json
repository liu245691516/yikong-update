{
  "name": "yikong-update",
  "main": "127.0.0.1:81",
  "window": {
    "title": "易控热更新",
    "toolbar": false,
    "width": 800,
    "height": 400,
    "min_width": 600,
    "min_height": 200,
    "resizable": false,
    "frame": true,
    "kiosk": false,
    "icon": "./dist/static/image/login/logo.png",
    "show_in_taskbar": true,
    "plugin": true,
    "show": false
  },
  "webkit": {
    "plugin": true,
    "java": false,
    "page-cache": false
  },
  "nodejs": true,
  "node-remote": "<all_urls>",
  "chromium-args": "-allow-file-access-from-files",
  "version": "1.1.1",
  "description": "yikong-update",
  "author": "liushuai",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js  --open nw",
    "start": "npm run dev ",
    "build": "node build/build.js",
    "dist": "npm run build && build --tasks win-x64 --mirror https://npm.taobao.org/mirrors/nwjs/ ."
  },
  "dependencies": {
    "bagpipe": "^0.3.5",
    "md5-node": "^1.0.1",
    "nw": "^0.41.2-sdk",
    "request": "^2.88.2",
    "vue": "^2.5.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^8.2.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-component": "^1.1.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "chalk": "^2.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "node-notifier": "^5.1.2",
    "nwjs-builder-phoenix": "^1.15.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "portfinder": "^1.0.21",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-url": "^7.2.1",
    "qs": "^6.8.0",
    "rimraf": "^2.6.0",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "vue-loader": "^13.3.0",
    "css-loader": "^0.28.0",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "vue-template-compiler": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "build": {
    "#nwFlavor": "sdk",
    "files": [
      "dist/**/*"
    ],
    "output": "./releases",
    "nwPlatforms": [
      "win"
    ],
    "nwVersion": "0.41.2",
    "nwArchs": [
      "x64"
    ],
    "outputPattern": "${NAME}-${PLATFORM}",
    "overriddenProperties": {
      "main": "./dist/index.html"
    }
  }
}
